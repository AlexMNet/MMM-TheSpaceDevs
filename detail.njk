<div style="max-width: {{width}}px;">
  {% if upcomingLaunch %}
  <div style="position: relative">
  <img src="{{upcomingLaunch.image}}" width="100%" style="aspect-ratio: 5/4; width: 100%; border-radius: 8px; margin-bottom: 6px;"/>
  {% if upcomingLaunch.orbit %}
  <span style="background-color: #38bdf8; padding: 3px 10px; border-radius: 0px 0px 8px 0px; font-size: 14px; color: white; position: absolute; bottom: 6px; right: 0px;">Orbit: {{upcomingLaunch.orbit}}</span>
  {% endif %}
    <span style="background-color: {{upcomingLaunch.statusColor}}; padding: 3px 10px; border-radius: 0px 0px 0px 8px; font-size: 14px; color: white; position: absolute; bottom: 6px; left: 0px;">Status: {{upcomingLaunch.status}}</span>
  </div>
  <div style="display: flex; flex-direction: column; gap: 6px; width: 100%;">
    <h2 style="margin: 0;"> {{upcomingLaunch.rocket}} - {{upcomingLaunch.company}}</h2>
    <h3 style="font-family: monospace; font-weight: bold; color: white; margin: 0;">T {% if upcomingLaunch.isUpcoming %} - {% else %} + {% endif %}{{upcomingLaunch.days}} : {{upcomingLaunch.hours}} : {{upcomingLaunch.minutes}} : {{upcomingLaunch.seconds}}</h3>
    <p style="font-family: sans-serif; color: grey; margin: 0;">{{upcomingLaunch.mission}}</p>
    <span>{{date}}</span>
  </div>
  {% else %}
  {% if error %}
    <h1>⚠️ {{ error }}</h1>
  {% else %}
    <h1>Loading...</h1>
  {% endif %}
  {% endif %}

</div>
